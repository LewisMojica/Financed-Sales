  "html": "<style>\r\n\t.print-format table, .print-format tr, \r\n\t.print-format td, .print-format div, .print-format p {\r\n\t\tline-height: 150%;\r\n\t\tvertical-align: middle;\r\n\t}\r\n\t@media screen {\r\n\t\t.print-format {\r\n\t\t\twidth: 8.5in;\r\n\t\t\tpadding: 0.25in;\r\n\t\t\tmin-height: 11in;\r\n\t\t}\r\n\t}\r\n\t@media print {\r\n\t\t.logo-container img {\r\n\t\t\tmax-width: 100px !important;\r\n\t\t\tmax-height: 80px !important;\r\n\t\t\twidth: auto !important;\r\n\t\t\theight: auto !important;\r\n\t\t}\r\n\t}\r\n\t.info-section {\r\n\t\tdisplay: flex;\r\n\t\tjustify-content: space-between;\r\n\t\talign-items: flex-start;\r\n\t\tmargin-bottom: 1rem;\r\n\t}\r\n\t.customer-info {\r\n\t\tflex-grow: 1;\r\n\t\tmargin-right: 20px;\r\n\t}\r\n\t.logo-container {\r\n\t\tflex-shrink: 0;\r\n\t}\r\n\t.logo-container img {\r\n\t\tmax-width: 150px;\r\n\t\theight: auto;\r\n\t}\r\n</style>\r\n\r\n{# Title based on credit flag #}\r\n{% if doc.custom_is_credit_invoice %}\r\n\t{% set heading_title = _(\"Factura de Cr√©dito\") %}\r\n{% else %}\r\n\t{% set heading_title = _(\"Factura de Venta\") %}\r\n{% endif %}\r\n{% set company_rnc = frappe.db.get_value('Company', doc.company, 'tax_id')  or 'RNC not Set'  %}\r\n<p class=\"text-center\" style=\"margin-bottom: 1rem\">\r\n\t{{ doc.company + ' - RNC: ' + company_rnc }}<br>\r\n</p>\r\n\r\n{% set customer_rnc = frappe.db.get_value('Customer', doc.customer, 'tax_id') %}\r\n<div class=\"info-section\">\r\n\t<div class=\"customer-info\">\r\n\t\t<p>\r\n\t\t\t<b>{{ doc.name }}</b><br>\r\n\t\t\t<b>{{ _(\"Cliente\") }}:</b> {{ doc.customer_name }}<br>\r\n\t\t\t<b>{{ _(\"Fecha\") }}:</b> {{ doc.get_formatted(\"posting_date\") }}<br>\r\n\t\t\t<b>{{ _(\"RNC Cliente\") }}:</b> {{customer_rnc}}<br>\r\n\t\t\t{% if doc.custom_factura_de_valor_fiscal %}\r\n\t\t\t{% if doc.custom_ncf and doc.custom_ncf[:3] == 'B02'%}\r\n\t\t\t<b>{{ _(\"RNC Cliente\") }}:</b> {{ customer_rnc }}<br>\r\n\t\t\t{% endif %}\r\n\t\t\t<b>{{ _(\"NCF\") }}:</b> {{ doc.custom_ncf }}<br>\r\n\t\t\t<b>{{ _(\"Vencimiento de secuencia\") }}:</b> {{ doc.get_formatted(\"custom_ncf_vencimiento\") }}<br>\r\n\t        {% endif %}\r\n\t\t</p>\r\n\t</div>\r\n\t<div class=\"logo-container\">\r\n\t\t<img src=\"/files/logo2.jpeg\" alt=\"Logo\">\r\n\t</div>\r\n</div>\r\n\r\n<hr>\r\n\r\n<table class=\"table table-condensed\">\r\n\t<thead>\r\n    \t\t<tr>\r\n    \t\t\t<th width=\"40%\">{{ _(\"Producto\") }}</th>\r\n    \t\t\t<th width=\"10%\" class=\"text-right\">{{ _(\"Cantidad\") }}</th>\r\n    \t\t\t<th width=\"25%\" class=\"text-right\">{{ _(\"Precio Unitario\") }}</th>\r\n    \t\t\t<th width=\"25%\" class=\"text-right\">{{ _(\"Sub-Total\") }}</th>\r\n    \t\t</tr>\r\n\t</thead>\r\n\t{% set ns = namespace(interest_amount=0) %}\r\n\t<tbody>\r\n\t    {% if doc.custom_is_credit_invoice == False%}\r\n    \t\t{%- for item in doc.items -%}\r\n    \t\t<tr>\r\n    \t\t\t<td>\r\n    \t\t\t\t{{ item.item_code }}\r\n    \t\t\t\t{%- if item.item_name != item.item_code -%}\r\n    \t\t\t\t\t<br>{{ item.item_name }}\r\n    \t\t\t\t{%- endif -%}\r\n    \t\t\t\t{%- if item.serial_no -%}\r\n    \t\t\t\t\t<br><b>{{ _(\"SR.No\") }}:</b><br>\r\n    \t\t\t\t\t{{ item.serial_no | replace(\"\\n\", \", \") }}\r\n    \t\t\t\t{%- endif -%}\r\n    \t\t\t</td>\r\n    \t\t\t\r\n    \t\t\t{% set f_rate = item.rate %}\r\n    \t\t\t{% set f_amount = f_rate*item.qty %}\r\n    \t\t\t{% set f_itbis = f_amount %}\r\n    \t\t\t<td class=\"text-right\">{{ item.qty }}</td>\r\n    \t\t\t<td class=\"text-right\">{{ frappe.format_value(f_rate,'Currency') }}</td>\r\n    \t\t\t<td class=\"text-right\">{{ frappe.format_value(f_amount,'Currency') }}</td>\r\n    \t\t</tr>\r\n\t\t{%- endfor -%}\r\n    \t{%- else -%}\r\n    \t\t{%- for item in doc.custom_financed_items -%}\r\n    \t\t\t{%- if doc.custom_is_credit_invoice and item.item_code == \"INTEREST\" -%}\r\n    \t\t\t\t{% set ns.interest_amount = ns.interest_amount + item.amount %}\r\n    \t\t\t{%- else -%}\r\n    \t\t\t\t<tr>\r\n    \t\t\t\t\t<td>\r\n    \t\t\t\t\t\t{{ item.item_code }}\r\n    \t\t\t\t\t\t{%- if item.item_name != item.item_code -%}\r\n    \t\t\t\t\t\t\t<br>{{ item.item_name }}\r\n    \t\t\t\t\t\t{%- endif -%}\r\n    \t\t\t\t\t\t{%- if item.serial_no -%}\r\n    \t\t\t\t\t\t\t<br><b>{{ _(\"SR.No\") }}:</b><br>\r\n    \t\t\t\t\t\t\t{{ item.serial_no | replace(\"\\n\", \", \") }}\r\n    \t\t\t\t\t\t{%- endif -%}\r\n    \t\t\t\t\t</td>\r\n    \t\t\t\t\t<td class=\"text-right\">{{ item.qty }}</td>\r\n    \t\t\t\t\t<td class=\"text-right\">\r\n    \t\t\t\t\t\t{{ frappe.format_value(item.rate, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t\t\t</td>\r\n    \t\t\t\t\t<td class=\"text-right\">\r\n    \t\t\t\t\t\t{{ frappe.format_value(item.amount, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t\t\t</td>\r\n    \t\t\t\t</tr>\r\n    \t\t\t{%- endif -%}\r\n    \t\t{%- endfor -%}\r\n    \t{%- endif -%}\r\n\t</tbody>\r\n</table>\r\n\r\n<table class=\"table table-condensed no-border\">\r\n\t<tbody>\r\n\t    {% if doc.custom_is_credit_invoice == False %}\r\n    \t\t<tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t<b>{{ _(\"Subtotal\") }}</b>\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{% if doc.custom_is_credit_invoice %}\r\n    \t\t\t\t\t{{ frappe.format_value(doc.net_total - ns.interest_amount, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t\t{% else %}\r\n    \t\t\t\t\t{{ frappe.format_value(doc.net_total, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t\t{% endif %}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \r\n    \t\t{%- for row in doc.taxes -%}\r\n    \t\t<tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t{{ row.description }}\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{{ frappe.format_value(row.tax_amount, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \t\t{%- endfor -%}\r\n    \r\n    \t\t{%- if doc.discount_amount -%}\r\n    \t\t<tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t{{ _(\"Descuento\") }}\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{{ frappe.format_value(doc.discount_amount, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \t\t{%- endif -%}\r\n    \r\n    \t\t<tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t<b>{{ _(\"Total\") }}</b>\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{{ frappe.format_value(doc.grand_total, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \t{% else %}\r\n\t\t    <tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t<b>{{ _(\"Subtotal\") }}</b>\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{{ frappe.format_value(doc.custom_financed_total, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \r\n    \t\t<tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t{{ _(\"ITBIS\") }}\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{{ frappe.format_value(0, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \r\n    \t\t{%- if doc.discount_amount -%}\r\n    \t\t<tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t{{ _(\"Descuento\") }}\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{{ frappe.format_value(doc.discount_amount, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \t\t{%- endif -%}\r\n    \r\n    \t\t<tr>\r\n    \t\t\t<td class=\"text-right\" style=\"width: 70%\">\r\n    \t\t\t\t<b>{{ _(\"Total\") }}</b>\r\n    \t\t\t</td>\r\n    \t\t\t<td class=\"text-right\">\r\n    \t\t\t\t{{ frappe.format_value(doc.grand_total, {\"fieldtype\":\"Currency\", \"currency\": doc.currency}) }}\r\n    \t\t\t</td>\r\n    \t\t</tr>\r\n    \t{% endif %}\r\n\t</tbody>\r\n</table>\r\n\r\n<p>\r\n\t<b>{{ _(\"Notas\") }}:</b><br>\r\n\t{{ doc.remarks or \"\" }}\r\n</p>\r\n\r\n<p class=\"text-center\">{{ _(\"Gracias por su compra.\") }}</p>\r\n",
